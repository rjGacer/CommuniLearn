// Prisma schema for CommuniLearn server (compact user-only schema)
// This is a copy of the smaller schema used for profile persistence.
// Use SQLite for local development. Run `npx prisma migrate dev` to apply changes.

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  picture   String?
  bio       String?
  studentId String?
  role      String?  // optional role field
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
